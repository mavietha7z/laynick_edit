<!DOCTYPE html>
<html lang="vi">
    <%- include('header') %>

    <body data-kt-app-header-stacked="true" data-kt-app-header-primary-enabled="true" class="app-default">
        <!-- Bản quyền thuộc về: https://thegioicode.vn -->
        <div class="d-flex flex-column flex-root app-root">
            <div class="app-page flex-column flex-column-fluid">
                <div class="app-header">
                    <div class="app-header-primary">
                        <div class="app-container container-xxl d-flex align-items-stretch justify-content-between">
                            <div class="d-flex flex-grow-1 flex-lg-grow-0">
                                <div class="d-flex align-items-center me-7">
                                    <a href="/" class="d-flex align-items-center me-lg-20 me-5">
                                        <a href="/">
                                            <i class="fa fa-chevron-left" aria-hidden="true"></i>
                                        </a>
                                    </a>
                                </div>
                            </div>

                            <div class="app-navbar flex-shrink-0">
                                <div class="d-flex align-items-center">
                                    <a class="cursor-pointer symbol symbol symbol-circle symbol-35px symbol-md-40px" href="/menu">
                                        <img class="" src="/images/logo-user.gif" alt="user" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="app-wrapper flex-column flex-row-fluid">
                    <div class="app-container container-xxl d-flex flex-row flex-column-fluid">
                        <div class="app-main flex-column flex-row-fluid">
                            <div class="d-flex flex-column flex-column-fluid">
                                <!--  -->
                                <div class="app-toolbar d-flex flex-stack py-4 pb-8">
                                    <div class="d-flex flex-grow-1 flex-stack flex-wrap gap-2 mb-n10">
                                        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                                            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                                                Gói Hack Nick
                                            </h1>
                                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                                                <li class="breadcrumb-item text-muted">
                                                    <a href="/" class="text-muted text-hover-primary">Trang Chủ</a>
                                                </li>
                                                <li class="breadcrumb-item">
                                                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                                                </li>
                                                <li class="breadcrumb-item text-muted">Tài Khoản</li>
                                                <li class="breadcrumb-item">
                                                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                                                </li>
                                                <li class="breadcrumb-item text-dark">Gói Hack Nick</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="app-content flex-column-fluid">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="mb-13 text-center">
                                                <h1 class="fs-2hx fw-bold mb-5">Mua Gói Hack Nick</h1>
                                                <div class="text-gray-400 fw-semibold fs-5">Mua gói hack nick để được nhiều ưu đãi.</div>
                                            </div>
                                            <div class="row g-10 text-center">
                                                <% products.forEach((product, index) => { %>
                                                <div class="col-xl-4">
                                                    <div class="d-flex h-100 align-items-center">
                                                        <div
                                                            class="w-100 d-flex flex-column flex-center rounded-3 bg-light bg-opacity-75 py-15 px-10"
                                                        >
                                                            <div class="mb-7 text-center">
                                                                <h1 class="text-dark mb-5 fw-bolder"><%= product.title %></h1>
                                                                <div class="text-center">
                                                                    <del><%= product.old_price %></del>
                                                                    <span class="fs-3x fw-bold text-primary"><%= product.price %></span>
                                                                    <span class="mb-2 text-primary">đ</span>
                                                                </div>
                                                            </div>
                                                            <div class="w-100 mb-10">
                                                                <% product.description.forEach((description) => { %>
                                                                <div class="d-flex align-items-center mb-5">
                                                                    <span class="fw-semibold fs-6 text-gray-800 flex-grow-1 pe-3"
                                                                        >- <%= description.value %></span
                                                                    >
                                                                    <i class="fa-regular fa-circle-check fs-1 text-success"></i>
                                                                </div>
                                                                <% }); %>
                                                            </div>
                                                            <input
                                                                type="text"
                                                                id="product-id-<%= index %>"
                                                                value="<%= product.id %>"
                                                                hidden
                                                            />
                                                            <button
                                                                class="btn btn-sm <%= product.register ? 'btn-success' : 'btn-primary' %>"
                                                                type="button"
                                                                id="product-register-<%= index %>"
                                                                data-register="<%= product.register %>"
                                                            >
                                                                <%= product.register ? 'Gia hạn' : 'Đăng Ký' %>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }); %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="app-footer">
                    <div class="app-footer-primary">
                        <div class="app-container container-xxl d-flex align-items-stretch justify-content-between">
                            <div class="d-flex flex-column flex-column-fluid">
                                <div class="d-flex flex-grow-1 flex-stack flex-wrap">
                                    <a class="footer-nav-title d-flex flex-column justify-content-center flex-wrap text-center" href="/">
                                        <i class="fa-solid fa-house fs-2 mb-1"></i>
                                        <h1 class="page-heading d-flex font-nav-footer flex-column justify-content-center my-0">
                                            Trang Chủ
                                        </h1>
                                    </a>
                                    <a
                                        class="footer-nav-title d-flex flex-column justify-content-center flex-wrap text-center active"
                                        href="/upgrade"
                                    >
                                        <i class="fa-solid fa-arrow-up-from-bracket fs-2 mb-1"></i>
                                        <h1 class="page-heading d-flex font-nav-footer flex-column justify-content-center my-0">
                                            Nâng cấp
                                        </h1>
                                    </a>

                                    <a
                                        class="footer-nav-title d-flex flex-column justify-content-center flex-wrap text-center"
                                        href="/card"
                                    >
                                        <i class="fa-solid fa-money-bill fs-2 mb-1"></i>
                                        <h1 class="page-heading d-flex font-nav-footer flex-column justify-content-center my-0">
                                            Nạp Tiền
                                        </h1>
                                    </a>
                                    <a
                                        class="footer-nav-title d-flex flex-column justify-content-center flex-wrap text-center"
                                        href="/evaluate"
                                    >
                                        <i class="fa-regular fa-star fs-2 mb-1"></i>
                                        <h1 class="page-heading d-flex font-nav-footer flex-column justify-content-center my-0">TOP</h1>
                                    </a>

                                    <a
                                        class="footer-nav-title d-flex flex-column justify-content-center flex-wrap text-center"
                                        href="/menu"
                                    >
                                        <i class="fa-regular fa-user fs-2 mb-1"></i>
                                        <h1 class="page-heading d-flex font-nav-footer flex-column justify-content-center my-0">
                                            Tài Khoản
                                        </h1>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    <script>
        console.log('%cBản quyền thuộc về: https://thegioicode.vn', 'color:green;font-size:14px;font-weight:bold');
        document.querySelectorAll('[id^="product-register"]').forEach((button) => {
            button.addEventListener('click', async (e) => {
                e.preventDefault();
                const index = button.id.split('-')[2];
                const product_id = document.getElementById(`product-id-${index}`).value;
                const data = { product_id };

                try {
                    const response = await fetch('/api/products/register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(data),
                    });

                    const result = await response.json();

                    if (result.status === 400) {
                        Swal.fire({
                            title: 'Thông báo',
                            text: result.message,
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#7066e0',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Nạp tiền ngay',
                            cancelButtonText: 'Huỷ',
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/card';
                            }
                        });
                    } else if (result.status === 200) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Thông báo',
                            text: result.message,
                            confirmButtonColor: '#4caf50',
                            confirmButtonText: 'Xong',
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.reload();
                            }
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Thông báo',
                            text: result.error,
                        });
                    }
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Thông báo',
                        text: 'Lỗi kết nối đến máy chủ',
                    });
                }
            });
        });
    </script>
</html>
